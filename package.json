{
  "name": "yew-counter-sample",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Edmund Goller <matrim.eg@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build:js": "rollup -c",
    "build:rs": "cargo web deploy --release",
    "build:scss": "node-sass --include-path scss scss/style.scss css/style.css",
    "build:css": "postcss --use autoprefixer -o static/style.css css/style.css",
    "build:style": "run-s build:scss build:css",
    "build:copy": "cp target/deploy/style.css release/ && cp target/deploy/counter.wasm release/ && cp target/deploy/index.html release/ && cp target/deploy/favicon.ico release/",
    "build": "run-s clean:deploy build:rs build:js build:style build:copy",
    "clean:deploy": "rm -rf /release",
    "prod": "run-s build serve",
    "serve": "serve -p 8080 release",
    "watch": "cargo web start --release",
    "test": "echo \"Error: no tests!\" && exit 1"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "autoprefixer": "^9.4.5",
    "node-sass": "^4.11.0",
    "nodemon": "^1.18.9",
    "npm-run-all": "^4.1.5",
    "postcss": "^7.0.11",
    "postcss-cli": "^6.1.1",
    "rollup": "^1.1.0",
    "rollup-plugin-babel": "^4.3.0",
    "rollup-plugin-postcss": "^1.6.3",
    "rollup-plugin-uglify": "^6.0.1",
    "rollup-plugin-wasm": "^3.0.0",
    "serve": "^10.1.1"
  },
  "dependencies": {
    "bootstrap": "^4.3.1"
  }
}
